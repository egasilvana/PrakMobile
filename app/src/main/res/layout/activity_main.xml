<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.modul1.MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Makan Malam"
        android:textAlignment="center"
        android:textSize="30sp"
        tools:layout_marginTop="50sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dengan Milea"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:layout_marginBottom="20sp"
        tools:layout_marginTop="20sp" />

    <EditText
        android:id="@+id/et_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nasi Uduk" />

    <EditText
        android:id="@+id/et_portion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <Button
        android:id="@+id/btn_eatbus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10sp"
        android:layout_weight="1"
        android:background="@color/colorAccent"
        android:onClick="onEatbus"
        android:text="@string/eatbus"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn_abnormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_weight="1"
        android:background="@color/colorAccent"
        android:onClick="onAbnormal"
        android:text="@string/abnormal"
        android:textColor="@android:color/background_light" />

    </LinearLayout>
</LinearLayout>
